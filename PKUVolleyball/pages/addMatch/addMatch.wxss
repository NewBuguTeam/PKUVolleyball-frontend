/* pages/matchInfo/matchInfo.wxss */
.container{
  display: flex;
  flex-direction: column;
}

.TeamsArea{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.TeamArea{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.TeamCard{
  width: 300rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: xx-large;
  color: white;
  margin: 20rpx;
}

.TeamText{
  font-size: x-large;
}

.ScoreText{
  font-size: xx-large;
  color: white;
}

.InfoArea{
  width: 85%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin: 20rpx;
}

.Line{
  width: 100%;
  height: 2rpx;
  background-color: black;
}

.ScoreArea{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60%;
}

.ScoreBar{
  display: flex;
  flex-direction: column;
}

.ScoreListText{
  font-size: x-large;
  margin: 10rpx;
  letter-spacing: 0.1rem;
}

.groupPicker{
  font-size: larger;
  align-self: flex-start;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
}

.teamPicker{
  font-size: larger;
}

.datePicker{
  font-size: larger;
  align-self: flex-start;
  margin-left: 40rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.submitButton{
  margin-top: 30rpx;
}