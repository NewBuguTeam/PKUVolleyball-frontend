/* pages/confirmPoints/confirmPoints.wxss */

.container{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.roundList{
  display: flex;
  flex-direction: row;
}

.scoreBoard{
  display: flex;
  flex-direction: column;
}

.curPoint{
  width: 250rpx;
  height: 150rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  font-size: xx-large;
  text-align: center;  
}

.pointText{
  align-self: center;
  color: white;
}

.actionButton{
  margin: 10rpx;
  width: 80rpx;
  margin-inline-start: auto;
  margin-inline-end: auto;
  height: 30rpx;
  background-color: turquoise;
  text-align: center;
}

.actionButtons{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.wholePage{
  padding: 0;
  display: flex;
  flex-direction: column;
}

.teamName{
  align-self: center;
  font-size: x-large;
  margin: 3rpx;
}

.buttonContainer{
  display: flex;
  flex-direction: row;
}

.submitButton{
  padding: 0;
  align-self: start;
  margin-bottom: 10rpx;
}

.curRoundText{
  background-color: lightgreen;
  margin-left: 6rpx;
  margin-right: 6rpx;
  font-size: large;
  border-radius: 5%;
}

.otherRoundText{
  background-color: white;
  margin-left: 4rpx;
  margin-right: 4rpx;
  font-size: medium;
  border-radius: 5%;
}

.timeTickerPage{
  width: 100%;
  height: 100%;
  background-color: gray;
  display: flex;
  flex-direction: column;
  position: fixed;
}

.timeTicker{
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
}

.timeText{
  font-size: 8em;
  margin-top: 90rpx;
}