.myLogin{
  padding-top: 100rpx;
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.myLogin image{
  height: 200rpx;
  width: 200rpx;
  border-radius: 50%;
  margin: 20rpx;
}

.myLogin text{
  color: #000;
  margin: 20rpx;
}

.myLogin input{
  margin: 20rpx;
}

.button{
  background-color: lightblue;
  color: black;
  margin: 20rpx;
}

.addButton{
  background-color: turquoise;
  margin: 20rpx;
}

.container{
  padding-top: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

image{
  border-radius: 50%;
  height: 250rpx;
  width: 250rpx;
}

.afterLogText{
  font-size: larger;
  margin: 20rpx;
}

.topBar{
  display: flex;
  flex-direction: row;
}

.GameList{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 20rpx;
}